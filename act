```components/ServicesSection.tsx
import React from 'react'
import {
  MonitorIcon,
  SmartphoneIcon,
  LayoutIcon,
  PencilRulerIcon,
  ChevronLeftIcon,
  ChevronRightIcon,
} from 'lucide-react'
const ServicesSection = () => {
  const services = [
    {
      icon: <LayoutIcon size={32} />,
      title: 'UI/UX',
      description:
        'Creating intuitive and visually appealing designs that enhance user experience.',
    },
    {
      icon: <MonitorIcon size={32} />,
      title: 'Web Design',
      description:
        'Designing responsive and engaging websites tailored to user needs.',
    },
    {
      icon: <SmartphoneIcon size={32} />,
      title: 'App Design',
      description: 'Crafting seamless and user-friendly mobile app interfaces.',
    },
    {
      icon: <PencilRulerIcon size={32} />,
      title: 'Prototyping & Wireframing',
      description:
        'Building interactive prototypes and structured wireframes for better design flow.',
    },
  ]
  return (
    <section className="py-16 md:py-24" id="services">
      <div className="text-center mb-10">
        <h2 className="text-3xl md:text-4xl font-bold mb-2">Services</h2>
        <p className="text-gray-300">
          Transforming ideas into intuitive digital experiences
        </p>
      </div>
      <div className="relative">
        <div className="flex flex-wrap justify-center gap-6">
          {services.map((service, index) => (
            <div
              key={index}
              className={`bg-purple-900 bg-opacity-50 p-6 rounded-2xl w-64 text-center ${index === 1 ? 'border-2 border-purple-500' : ''}`}
            >
              <div className="flex justify-center mb-4">
                <div className="bg-purple-800 p-4 rounded-lg inline-block">
                  {service.icon}
                </div>
              </div>
              <h3 className="text-xl font-bold mb-3">{service.title}</h3>
              <p className="text-gray-300 text-sm">{service.description}</p>
            </div>
          ))}
        </div>
        <div className="flex justify-center mt-8 space-x-2">
          <button className="absolute left-0 top-1/2 transform -translate-y-1/2 bg-purple-800 p-2 rounded-full">
            <ChevronLeftIcon size={20} />
          </button>
          <div className="flex space-x-2">
            <div className="w-2 h-2 rounded-full bg-gray-400"></div>
            <div className="w-2 h-2 rounded-full bg-gray-400"></div>
            <div className="w-8 h-2 rounded-full bg-purple-500"></div>
          </div>
          <button className="absolute right-0 top-1/2 transform -translate-y-1/2 bg-purple-800 p-2 rounded-full">
            <ChevronRightIcon size={20} />
          </button>
        </div>
      </div>
    </section>
  )
}
export default ServicesSection

