    {
      name: 'InVision',
      bg: 'bg-purple-700',
      letter: 'In',
    },
    {
      name: 'Adobe XD',
      bg: 'bg-purple-600',
      letter: 'Xd',
    },
  ]
  return (
    <section className="py-16" id="skills">
      <div className="max-w-3xl mx-auto">
        <h2 className="text-3xl md:text-4xl font-bold mb-8">Skills</h2>
        <div className="flex flex-wrap gap-4">
          {skills.map((skill, index) => (
            <div
              key={index}
              className={`${skill.bg} w-16 h-16 rounded-lg flex items-center justify-center text-white font-bold`}
